generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique 
  password String 
  documents Entity[]

  @@map("users")
}

model Entity {
  id              Int       @id @default(autoincrement())
  name            String
  type            EntityType
  size            Int?
  mimeType        String?
  parentId        Int?      // Optional field for parent folder
  userId          Int
  user            User      @relation(fields: [userId], references: [id])

  parentFolder  Entity? @relation("EntityParent", fields: [parentId], references: [id])
  childEntities  Entity[] @relation("EntityParent")

  @@index([parentId])
  @@index([userId])

  @@map("entities")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text // MediumText may be needed for MySql
  expiresAt   DateTime

  @@map("sessions")
}

enum EntityType {
  FOLDER
  FILE
}
